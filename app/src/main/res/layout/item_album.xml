<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/grid_album_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/album_img_art1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_foreground"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/album_img_art2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_foreground"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/album_img_art3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_foreground"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/album_img_art4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_foreground"
                    tools:ignore="ContentDescription" />
            </GridLayout>

            <ImageView
                android:id="@+id/album_img_art"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/ic_launcher_foreground"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <TextView
            android:id="@+id/album_txt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_normal" />

        <TextView
            android:id="@+id/album_txt_countTracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/txt_small" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
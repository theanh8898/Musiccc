<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/noti_img_art"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_small"
        android:src="@mipmap/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noti_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:paddingTop="@dimen/padding_small"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/txt_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noti_txt_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/padding_small"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/txt_normal" />

        <LinearLayout
            android:id="@+id/noti_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/noti_img_previous"
                android:layout_width="@dimen/noti_iconSize"
                android:layout_height="@dimen/noti_iconSize"
                android:layout_weight="1"
                android:src="@mipmap/ic_previous_foreground" />

            <ImageView
                android:id="@+id/noti_img_playPause"
                android:layout_width="@dimen/noti_iconSize"
                android:layout_height="@dimen/noti_iconSize"
                android:layout_weight="1"
                android:src="@mipmap/ic_play_foreground" />

            <ImageView
                android:id="@+id/noti_img_next"
                android:layout_width="@dimen/noti_iconSize"
                android:layout_height="@dimen/noti_iconSize"
                android:layout_weight="1"
                android:src="@mipmap/ic_next_foreground" />

            <ImageView
                android:id="@+id/noti_img_close"
                android:layout_width="@dimen/noti_iconSize"
                android:layout_height="@dimen/noti_iconSize"
                android:layout_weight="1"
                android:src="@mipmap/ic_close_foreground" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>